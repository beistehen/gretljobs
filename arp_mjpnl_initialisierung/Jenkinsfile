// Start with a scripted pipeline part
node('master') {
    stage('Prepare') {
        uploadDirName = 'upload'
        uploadBeraterFileName = 'uploadBeraterFile'
        uploadKatalogFileName = 'uploadKatalogFile'
        uploadUZLFileName = 'uploadUZLFile'
        // By default the uploaded file is stored in the following directory:
        buildDir = "$JENKINS_HOME/jobs/$JOB_BASE_NAME/builds/$BUILD_NUMBER"
        // Create a subdirectory for the uploaded file:
        sh "mkdir $buildDir/$uploadDirName"
        inputFile = input message: 'Datei mit den Berater hochladen', parameters: [file(name: "$uploadDirName/$uploadBeraterFileName", description: 'Hochzuladende XTF-Datei (Berater) ausw채hlen')]
        inputFile = input message: 'Datei mit den Katalogen (Flora/Fauna) hochladen', parameters: [file(name: "$uploadDirName/$uploadKatalogFileName", description: 'Hochzuladende XTF-Datei (Katalogen) ausw채hlen')]
        inputFile = input message: 'Datei mit den Umweltzielen (UZL Subregionen) hochladen', parameters: [file(name: "$uploadDirName/$uploadUZLFileName", description: 'Hochzuladende XTF-Datei (UZL) ausw채hlen')]
        dir(buildDir) {
            stash name: 'uploadDir', includes: "upload/**"
        }
        sh "rm -r $buildDir/$uploadDirName"
    }
}

// Declarative pipeline starts here
pipeline {
    agent { label params.nodeLabel ?: 'gretl' }
    options {
        timeout(time: 6, unit: 'HOURS')
    }
    stages {
        stage('Run GRETL job') {
            steps {
                git url: "${env.GIT_REPO_URL}", branch: "${params.BRANCH ?: 'main'}", changelog: false
                container('gretl') {
                    dir(env.JOB_BASE_NAME) {
                        unstash name: 'uploadDir'
                        sh 'gretl'
                    }
                }
            }
        }
    }
    post {
        unsuccessful {
            emailext (
                to: '${DEFAULT_RECIPIENTS}',
                recipientProviders: [requestor()],
                subject: "GRETL-Job ${JOB_NAME} (${BUILD_DISPLAY_NAME}) ist fehlgeschlagen",
                body: "Die Ausf체hrung des GRETL-Jobs ${JOB_NAME} (${BUILD_DISPLAY_NAME}) war nicht erfolgreich. Details dazu finden Sie in den Log-Meldungen unter ${RUN_DISPLAY_URL}."
            )
        }
    }
}
